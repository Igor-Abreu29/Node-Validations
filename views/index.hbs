<div class="bg-light p-5 rounded mt-3">
  <h1>Register</h1>
  
  <form action="/register" method="POST" class="mb-4">
    <div class="row">
      <div class="col-md-4">
        <label for="name" class="form-label mt-2">Name:</label>
        <input type="text" class="form-control" name="name" id="name" placeholder="Igor Abreu" />
      </div>

      <div class="col-md-4">
        <label for="email" class="form-label mt-2">Email:</label>
        <input type="email" class="form-control" name="email" id="email" placeholder="email@example.com" required/>
      </div>

      <div class="col-md-4 mt-3">
        <button class="btn btn-success mt-4 w-100 p-2">Complete</button>
      </div>
    </div>
  </form>
  
  {{>message}}
</div>